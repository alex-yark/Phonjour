doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='Phonjour app: the receptionist in your pocket')
        meta(name='author', content='Phonjour')
        title Phonjour: The Receptionist in Your Pocket
        // Bootstrap core CSS
        != css('bootstrap')
        // Custom styles for this template
        != css('dashboard')
        // HTML5 shiv and Respond.js for IE8 support of HTML5 elements and media queries
        != "<!--[if lt IE 9]>"
            != js('html5shiv')
            != js('respond')
        != "<![endif]-->"
        != js('jquery')
        != js('bignumber')
        != js('bootstrap')
        != js('knockout')
        != js('phonjour')
        // IE10 viewport hack for Surface/desktop Windows 8 bug
        != js('ie10-viewport-bug-workaround')
        if googleAnalyticsId
            script(type="text/javascript").
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

                ga('create', '#{googleAnalyticsId}', 'auto');
                ga('send', 'pageview');

    body
        nav.navbar.navbar-default.navbar-fixed-top.phonjour-navbar
            block navbar
        .container-fluid
            .row
                .col-sm-3.col-md-2.sidebar
                    block sidebar
                .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                    block content

        script(type="text/javascript").
            $(document).ready(function() {
                $("[data-toggle='tooltip']").tooltip();
            });
